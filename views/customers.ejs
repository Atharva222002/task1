<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
  <style>
    *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
body{
  height: 100vh;
  width: 100vh;
}
#home::before{
    background: url("../images/dmitry-demidko-eBWzFKahEaU-unsplash.jpg") no-repeat center center/cover;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

#home{
    position: relative;
    width: 100vw;
    height: 100vh;
    padding: 0;
    margin:0;
    height: 100vh;
    overflow-x: hidden;
}
.main{
  position: absolute;
  top: 6%;
  left: 10%;
  display: flex;
  flex-direction: column;
  background-color: rgba(240, 233, 130, 0.966);
  border-radius: 15px;
  box-shadow: 0 0 20px black;
  height: 88%;
  width: 80%;
  overflow: auto;
}
p{
    margin: 30px;
    display: block;
    font-size: 1.5rem;
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-weight: bold;

}
.users{
    display: flex;
    flex-direction: row;
    border-radius: 3em;
    background-color: rgba(247, 40, 219, 0.363);
    margin: 5px auto;
    width: 80%;
    height: 3em;
}
.users:hover{
    background-color: rgb(168, 14, 168);
    color: white;
}
.userprof{
    padding-top: 0.5em;
    width: 20%;
}
.fas{
    margin: 2px 0px 0px 15px;
}
.name{
    font-size: 1.3em;
    width: 50%;
}
.button{
    display: flex;
    width: fit-content;
    /* justify-content: center; */

}
a{
    text-decoration: none;
    margin: auto;
}
.button-success {
    padding: 0.2em;
            color: white;
            border-radius: 4px;
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        }

        .button-success {
            background: rgb(28, 184, 65);
            /* this is a green */
        }
        .button-success:hover{
            color: black;
            background-color: cornsilk;
        }
        .info{
  position: fixed;
  top: 0.2em;
  left: 0.3em;
  z-index: 2;
  color: rgb(255, 0, 242);
  font-size: 1.4em;
  font-weight: bolder;
  font-family:Verdana, Geneva, Tahoma, sans-serif;
}
  </style>
  <title>safeBank</title>
</head>

<body>
  <div id="home">
    <div class="info">
        <img src="https://img.icons8.com/emoji/48/000000/bank-emoji.png"/>
        <span>safeBank</span></div>
    <div class="main">
        <p>Customers</p>
        <% users.forEach(function(user){ %>
        <div class="users">
            <div class="userprof">
                <i class='fas fa-user-alt' style='font-size:30px'></i>
            </div>
            <div class="name"><%= user.name %></div>
            <div class="button">
                
                <a href="/customers/<%= user._id%>">
                    <button class="button-success pure-button">View Profile</button>   
                </a>
            </div>
            
        </div>
        <%})%> 
    </div>
  </div>
</body>
</html>